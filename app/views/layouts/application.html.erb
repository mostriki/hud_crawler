<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>HUD Crawler</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="wrapper">
      <div class="wrap">
        <nav class="header">
          <%= render "layouts/nav" %>
        </nav>

        <div class="container">
          <%= render "layouts/alerts" %>
          <%= yield %>
        </div>
      </div>
      
      <footer class="footer">
        <%= render "layouts/footer" %>
      </footer>
    </div>
  </body>

</html>
